{{ asset_add("scripts.js", "streams::js/form/translations.js") }}

{% block content %}

    <div class="container-fluid">

        {{ form_open({'class': 'form', 'enctype': 'multipart/form-data', 'url': form.options.url ?: url_full()}) }}

        {# Chrome Autocomplete Fix #}
        <input style="display:none">
        <input type="password" style="display:none; visibility: hidden;">

        {{ view("streams::form/partials/translations", {'form': form}) }}
        {{ view("streams::form/partials/heading", {'form': form}) }}
        {{ view("streams::form/partials/layout", {'form': form}) }}
        {{ view("streams::form/partials/controls", {'form': form}) }}

        {{ form_close() }}

    </div>

{% endblock %}
