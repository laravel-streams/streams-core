<div class="card {{ section.orientation == 'vertical' ? 'card-flex' }}" {{ html_attributes(section.attributes) }}>

    {% if section.title %}
        <div class="card-header">
            <h4 class="card-title">
                {{ section.icon ? icon(section.icon) }}
                {{ trans(section.title)|raw }}

                {% if section.description %}
                    <small>
                        <br>{{ trans(section.description)|raw }}
                    </small>
                {% endif %}
            </h4>
        </div>
    {% endif %}

    <ul class="nav nav-sections nav-{{ section.orientation }}">
        {% spaceless %}
            {% for slug, tab in section.tabs %}
                <li class="nav-item {{ loop.first ? 'active' }}">
                    <a href="#tab-{{ slug }}" data-toggle="tab" class="nav-link">
                        {{ tab.icon ? icon(tab.icon) }}
                        {{ trans(tab.title) }}
                    </a>
                </li>
            {% endfor %}
        {% endspaceless %}
    </ul>

    <div class="card-block">
        {% for slug, tab in section.tabs %}
            <div class="tab-pane {{ loop.first ? 'active' }}" id="tab-{{ slug }}">
                {% if tab.view %}
                    {% include tab.view %}
                {% elseif tab.html %}
                    {{ tab.html|raw }}
                {% else %}
                    {% if tab.fields is empty %}
                        <div class="form-group">
                            {{ trans("streams::message.no_fields_available") }}
                        </div>
                    {% else %}
                        {% for field in tab.fields %}
                            <div class="field-group">
                                {% for field in form.fields.translations(field) %}
                                    {{ field.render({'form': form})|raw }}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </div>
        {% endfor %}
    </div>

</div>
